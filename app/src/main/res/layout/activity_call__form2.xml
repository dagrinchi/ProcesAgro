<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/about_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

    <LinearLayout
        android:id="@+id/form2_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <TextView
            android:id="@+id/tituloUbicacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:gravity="center_vertical|center_horizontal"
            android:text="UbicaciÃ³n Finca"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departamento"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:spinnerMode="dialog" />

        <!--<EditText
            android:id="@+id/departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:maxLength="30"
            android:hint="Departamento"
            android:inputType="textPersonName" />-->

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/municipio"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:spinnerMode="dialog" />

       <!-- <EditText
            android:id="@+id/municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="Municipio o Vereda" />-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:maxLength="30"
            android:id="@+id/vereda"
            android:layout_gravity="center_horizontal"
            android:hint="Vereda" />

        <Button
            android:id="@+id/form2_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#0099cc"
            android:drawableTop="@android:drawable/ic_media_next"
            android:text="Siguiente"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>