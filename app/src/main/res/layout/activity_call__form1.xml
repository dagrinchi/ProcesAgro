<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/about_main_layout"
        android:weightSum="1"
        android:padding="10dp"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:id="@+id/form1_layout"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Registro Sanitario de \nPredios Pecuarios"
                android:id="@+id/textView"
                android:maxLength="30"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.11"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ica"
                android:maxLength="30"
                android:layout_gravity="center_horizontal"
                android:hint="ICA 3-101"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:inputType="text|textCapSentences" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textPersonName"
                android:ems="10"
                android:maxLength="30"
                android:id="@+id/finca"
                android:layout_gravity="center_horizontal"
                android:hint="Nombre Finca" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textPersonName"
                android:ems="10"
                android:maxLength="30"
                android:id="@+id/propietario"
                android:layout_gravity="center_horizontal"
                android:hint="Nombre Propietario" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:maxLength="30"
                android:id="@+id/cedula_prop"
                android:layout_gravity="center_horizontal"
                android:hint="Cédula Propietario" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:maxLength="30"
                android:id="@+id/telefono_prop"
                android:layout_gravity="center_horizontal"
                android:hint="Télefono Fijo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:maxLength="30"
                android:id="@+id/celular_prop"
                android:layout_gravity="center_horizontal"
                android:hint="Celular Propietario" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:drawableTop="@android:drawable/ic_media_next"
                android:id="@+id/form1_next"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#0099cc"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
