<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wyble.procesagro.DealsActivity"
    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="titulo oferta"
            android:id="@+id/deal_title"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="#53A563"
            android:textColor="#fff"
            android:padding="1dp"
            android:paddingStart="2dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="descripcion oferta"
            android:id="@+id/deal_descripcion"
            android:layout_gravity="center_horizontal"
            android:padding="1dp"
            android:maxLines="5"
            android:scrollbars="vertical"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pasos"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:background="#53A563"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:paddingStart="2dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:id="@+id/pasoslistView" />
    </LinearLayout>
</RelativeLayout>
