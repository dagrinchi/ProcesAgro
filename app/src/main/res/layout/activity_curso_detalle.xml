<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewCurso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#fff"
    android:padding="20dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Título Curso"
            android:id="@+id/tituloCurso"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descripción Larga Curso"
            android:background="@drawable/descripcion_curso"
            android:id="@+id/descCurso"
            android:layout_gravity="center_horizontal"
            android:lines="8"
            android:layout_marginTop="30dp"
            android:paddingTop="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:maxLines="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PlayCurso"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/play_icon" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/linkUrlCurso"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/link_pagina"
            android:layout_margin="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/facebookBtnCurso"
                android:layout_margin="10dp"
                android:background="@drawable/facebook" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/twitterBtnCurso"
                android:layout_margin="10dp"
                android:background="@drawable/twitter" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
