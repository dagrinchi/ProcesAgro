<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#fff"
    android:scrollbarStyle="outsideOverlay"
    android:paddingStart="60dp"
    android:paddingTop="35dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logoView"
                android:src="@drawable/logo"
                android:contentDescription="procesAgro" />-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:background="#fff">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/actualizar_btn"
                    android:background="@drawable/actualizar" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acercade_btn"
                    android:background="@drawable/acerca_de" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:padding="9dp"
            android:gravity="center_vertical|center_horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:inputType="text"
                android:background="@drawable/buscar_xbig"
                android:editable="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buscar_button"
                android:background="@drawable/boton_buscar_xbig" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:id="@+id/row1"
            android:padding="9dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row1_button1"
                android:background="@drawable/cursos_vituales_xbig"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row1_button2"
                android:background="@drawable/agromapas_xbig"
                android:layout_margin="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/row2"
            android:padding="9dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row2_button1"
                android:background="@drawable/sipsa_xbig"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row2_button2"
                android:background="@drawable/siembra_xbig"
                android:layout_margin="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row3"
            android:padding="9dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row3_button1"
                android:background="@drawable/convocatoria_xbig"
                android:text="Titulo Convocatoria\nDescripciÃ³n Corta"
                android:textSize="36dp"
                android:paddingBottom="30dp"
                android:textStyle="bold"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row4"
            android:padding="9dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row4_button1"
                android:background="@drawable/identifica_v_xbig"
                android:layout_margin="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row5"
            android:padding="9dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row5_button1"
                android:background="@drawable/autorizacion_productos_ecologicos_xbig"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row5_button2"
                android:background="@drawable/certificado_incentivo_forestal_xbig"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/row6"
            android:padding="9dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row6_button1"
                android:background="@drawable/tarjeta_profesional_xbig"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row6_button2"
                android:background="@drawable/incentivo_rural_dre_xbig"
                android:layout_margin="3dp" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>